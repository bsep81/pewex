<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="pewex" author="Grupa 2">
        <createTable tableName="user">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" />
            </column>
            <column name="user_name" type="VARCHAR(150)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(150)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="role" type="VARCHAR(10)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="created_by" type="VARCHAR(150)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="created_date" type="datetime">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="modified_by" type="VARCHAR(150)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="modified_date" type="datetime">
                <constraints nullable="false" unique="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="category" author="Borys">
        <createTable tableName="category">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" />
            </column>
            <column name="parent_id" type="BIGINT">
                <constraints nullable="true" unique="false" />
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false" unique="true" />
            </column>
        </createTable>
    </changeSet>
    <changeSet id="productType" author="Borys">
        <createTable tableName="product_type">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" />
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false" unique="true" />
            </column>
        </createTable>
    </changeSet>
    <changeSet id="author" author="maciejczulak">
        <createTable tableName="author">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" />
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false" unique="true" />
            </column>
            <column name="surname" type="VARCHAR(100)">
                <constraints nullable="false" unique="true" />
            </column>
        </createTable>
    </changeSet>

